{
  "name": "with-a2a-a2ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:agent\" --names ui,agent --prefix-colors blue,green",
    "dev:ts": "concurrently \"npm run dev:ui\" \"npm run dev:agent-ts\" --names ui,agent-ts --prefix-colors blue,cyan",
    "dev:debug": "LOG_LEVEL=debug npm run dev",
    "dev:agent": "./scripts/run-agent.sh || scripts/run-agent.bat",
    "dev:agent-ts": "./scripts/run-agent-ts.sh || scripts/run-agent-ts.bat",
    "dev:ui": "next dev --turbopack",
    "build": "next build",
    "build:agent-ts": "cd agent-ts && npm run build",
    "start": "next start",
    "lint": "eslint .",
    "install:agent": "./scripts/setup-agent.sh || scripts\\setup-agent.bat",
    "install:agent-ts": "./scripts/setup-agent-ts.sh || cd agent-ts && npm install",
    "postinstall": "npm run install:agent"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.7",
    "@google/adk": "^0.2.2",
    "@google/genai": "^1.35.0",
    "@a2ui/lit": "^0.8.1",
    "@ag-ui/a2a": "^0.00.6",
    "@copilotkit/a2ui-renderer": "^1.51.2",
    "@copilotkit/react-core": "^1.51.2",
    "@copilotkit/runtime": "^1.51.2",
    "hono": "^4.11.4",
    "next": "^16.1.2",
    "npx": "^10.2.2",
    "pnpm": "^10.28.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uv": "^1.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.34.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.1.13",
    "typescript": "5.9.2",
    "concurrently": "^9.2.1"
  }
}
